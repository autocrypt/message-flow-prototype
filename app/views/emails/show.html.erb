<div class="card">
  <div class="card-block">
    <h4 class="card-title">
      <%= @email.subject %>
    </h4>
    <h6 class="card-subtitle mb-2 text-muted">
      From:
      <%= link_to @email.from, user_emails_path(@email.from) %>
